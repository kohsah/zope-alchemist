<html metal:use-macro="context/@@standard_macros/view">
<head></head>
<body>

<div metal:fill-slot="body">

  <table tal:define="base_view context/absolute_url;
		     table view/table">

     <tr>
       <th> Column </th>
       <th> PK </th>
       <th> Nullable </th>
       <th> Type </th>
     </tr>
    
     <tr tal:repeat="column table/c">
       <td> <b tal:replace="column/name"/></td>
       <td> <b tal:replace="column/primary_key"/></td>
       <td> <b tal:replace="column/nullable"/></td>
       <td> <b tal:replace="column/type"/></td>
     </tr>

    </table>

</div>
</body>
</html>
