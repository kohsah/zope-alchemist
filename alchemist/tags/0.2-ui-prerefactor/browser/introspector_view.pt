<html metal:use-macro="context/@@standard_macros/view">
<head></head>
<body>

<div metal:fill-slot="body">

   <table tal:define="base_view context/absolute_url">
     <tr>
       <th> Table </th>
       <th> Type </th>
       <th> Schema </th>
     </tr>
    
     <tr tal:repeat="table_info view/tableListing">
       <td> <a href="" tal:attributes="href string:${base_view}/table?table_name=${table_info/table_name}" 
	       style="display:block" tal:content="table_info/table_name"></a> </td>
       <td> <b tal:replace="table_info/table_type"/> </td>
       <td> <b tal:replace="table_info/table_schema"/> </td>
     </tr>

    </table>

</div>
</body>
</html>
